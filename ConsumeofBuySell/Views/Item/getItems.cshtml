
@{
    ViewBag.Title = "getItems";
}

     <h1>Buy Items</h1>

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2
    }

    th {
        background-color: #4CAF50;
        color: white;
    }
</style>

<table border="1">


    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Prize</th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.List)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.Iname</td>
            <td>@item.Prize</td>
            <td>
                @Html.ActionLink("Buy", "deleteItems", new { id = item.id })
            </td>
        </tr>
    }

</table>

